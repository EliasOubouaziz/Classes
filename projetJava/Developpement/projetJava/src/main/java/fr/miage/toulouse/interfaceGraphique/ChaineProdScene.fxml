<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.cell.*?>
<?import javafx.collections.*?>
<?import fxmltableview.*?>
<?import javafx.scene.control.TextField?>

<AnchorPane prefHeight="624.0" prefWidth="775.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.miage.toulouse.interfaceGraphique.ChaineProdControleur">
	<children>
		<BorderPane prefHeight="624.0" prefWidth="775.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<top>
				<Pane prefHeight="89.0" prefWidth="775.0" BorderPane.alignment="CENTER">
					<children>
						<Label alignment="CENTER" layoutX="224.0" layoutY="22.0" text="Gestion des Chaines de production" textAlignment="CENTER">
							<font>
								<Font name="System Bold" size="20.0" />
							</font>
						</Label>
						<Button fx:id="btnRetour" layoutX="14.0" layoutY="18.0" mnemonicParsing="false" onAction="#retourMenu" text="Retour" />
					</children>
				</Pane>
			</top>
			<center>
				<TableView fx:id="tableCdp" editable="true" prefHeight="457.0" prefWidth="775.0" BorderPane.alignment="CENTER">
					<columns>


						<TableColumn fx:id="colID" editable="false" prefWidth="118.0" text="Id">

							<cellValueFactory>
								<PropertyValueFactory property="id" />
							</cellValueFactory>

						</TableColumn>

						<TableColumn fx:id="colNomC" editable="false" prefWidth="306.0" text="Nom Chaine">

							<cellValueFactory>
								<PropertyValueFactory property="nom" />
							</cellValueFactory>

						</TableColumn>

						<TableColumn fx:id="colEtat" editable="true" onEditCommit="#EditEtat" prefWidth="159.0" text="Etat">
							<cellValueFactory>
								<PropertyValueFactory property="activation" />
							</cellValueFactory>
						</TableColumn>

						<TableColumn fx:id="colDetail" editable="false" minWidth="0.0" prefWidth="228.0" sortable="false" text="Coût de la chaîne">
							<cellValueFactory>
								<PropertyValueFactory property="cout" />
							</cellValueFactory>
						</TableColumn>
					</columns>
					<columnResizePolicy>
						<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
					</columnResizePolicy>
				</TableView>
			</center>
			<bottom>
			<Pane prefHeight="40.0" prefWidth="775.0" BorderPane.alignment="CENTER">
				<Label textAlignment="CENTER" layoutX="450.0" layoutY="5.0" text="Somme des côuts :">
					<font>
						<Font name="System Bold" size="14.0" />
					</font>
				</Label>
				<TextField fx:id="total" layoutX="575.0" editable="false" >
					<font>
						<Font name="System Bold" size="14.0" />
					</font>
				</TextField>
			</Pane>
			</bottom>
			
		</BorderPane>
	</children>
</AnchorPane>
